<!DOCTYPE html>
<html>
<head>
  <title>IdeaBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="user_nav">
  <% if current_user %>
    <%= link_to "My Ideas", user_path(current_user) %>
    <% if current_user.role == "admin" %>
    <%= link_to "Manage Categories", categories_path %>
    <%= link_to "Manage Images", images_path %>
    <% end %>
  <% end %>
</div>


<%= yield %>


<br/>

<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.username %>.<br/>
    <%= link_to "Log out", logout_path %>

  <% end %>
</div>

</body>
</html>
